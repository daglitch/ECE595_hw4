<%= form_for @evaluation do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
    <% f.fields_for :topics do |builder|%>
    <p>
      <%= builder.label :content, "Topic"%><br />
      <%= builder.text_area :content, :rows => 3%><br />
      <%= builder.check_box :_destroy %>
      <%= builder.label :_destroy, "Remove Topic" %>
    </p>
    <% end %>
  <p><%= f.submit %></p>
<% end %>
