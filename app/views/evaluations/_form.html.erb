<%= form_for @evaluation do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
    <% f.fields_for :topics do |builder|%>
      <%= render 'topic_fields', :f => builder%>
    <% end %>
  <p><%= link_to_add_fields "Add Topic", f, :topics %></p>
  <p><%= f.submit %></p>
<% end %>